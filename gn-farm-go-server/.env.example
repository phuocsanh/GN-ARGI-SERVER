#####################################################################
# ENVIRONMENT VARIABLES CHO GN FARM GO SERVER
# Tệp này chứa các biến môi trường cần thiết cho ứng dụng
# Sao chép thành .env và điền các giá trị thực tế
# Lưu ý: Không commit file .env vào git (chứa thông tin nhạy cảm)
#####################################################################

# ===== CẤU HÌNH CƠ SỞ DỮ LIỆU POSTGRESQL =====
# Cấu hình kết nối đến PostgreSQL database chính
DB_HOST=postgres_gn_farm        # Tên host PostgreSQL (Docker service name)
DB_PORT=5432                    # Cổng kết nối PostgreSQL
DB_USER=postgres                # Tên người dùng database
DB_PASSWORD=your_password       # Mật khẩu database (thay đổi trong production)
DB_NAME=GO_GN_FARM             # Tên database chính

# ===== CẤU HÌNH REDIS CACHE =====
# Redis được sử dụng cho caching, session, rate limiting
REDIS_HOST=redis_gn_farm        # Tên host Redis (Docker service name)
REDIS_PORT=6379                 # Cổng kết nối Redis
REDIS_PASSWORD=                 # Mật khẩu Redis (bỏ trống nếu không có)

# ===== CẤU HÌNH HTTP SERVER =====
# Thiết lập cho Gin web server
SERVER_PORT=8082                # Cổng chạy HTTP server
GIN_MODE=debug                  # Chế độ Gin: debug, release, test

# ===== CẤU HÌNH GỬI EMAIL (SENDGRID) =====
# Sử dụng SendGrid để gửi email thông báo, OTP, xác nhận
SENDGRID_API_KEY=your_sendgrid_api_key  # API key của SendGrid
SENDER_EMAIL=your_email@example.com     # Email gửi (phải xác thực trong SendGrid)

# ===== CẤU HÌNH JWT AUTHENTICATION =====
# JSON Web Token cho xác thực người dùng
JWT_SECRET=your_jwt_secret_key          # Secret key ký JWT (dùng chuỗi phức tạp)
JWT_EXPIRATION=1h                       # Thời gian hết hạn token (1h, 24h, 7d, etc.)

# ===== CẤU HÌNH KHÁC =====
# Các thiết lập tổng quát
LOG_LEVEL=debug                         # Mức độ log: debug, info, warn, error

# ===== CẤU HÌNH CLOUDINARY (FILE STORAGE) =====
# Cloudinary cho lưu trữ và xử lý file upload
CLOUDINARY_CLOUD_NAME=your_cloud_name   # Tên cloud Cloudinary
CLOUDINARY_API_KEY=your_api_key         # API key Cloudinary
CLOUDINARY_API_SECRET=your_api_secret   # API secret Cloudinary

# ===== CẤU HÌNH TESTING =====
# Các thiết lập riêng cho môi trường test
TEST_DB_HOST=localhost                  # Host database test (thường localhost)
TEST_DB_PORT=5432                       # Cổng database test
TEST_DB_USER=postgres                   # User database test
TEST_DB_PASSWORD=123456                 # Password database test
TEST_DB_NAME=GO_GN_FARM_TEST           # Tên database test (khác với production)
